<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen  p-20">

        <div class="form">
            <form action="/create" method="post" class="space-y-5">

                <input class="w-full border px-10 py-5 rounded-lg outline-none" type="text"
                    placeholder="Enter title of your task" name="title">

                <textarea class="w-full border px-10 py-5 rounded-lg outline-none resize-none" name="details"
                    placeholder="Enter detailed description of your task"></textarea>
                <input class=" border bg-blue-400 p-2 rounded-lg text-white" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex flex-wrap gap-10  mt-10">
            <%if(files.length>0){%>
                <%files.forEach(file=>{%>
                    <div class="w-[30%] bg-gray-400 px-10 py-5 rounded-lg">
                        <h1 class="text-3xl">
                            <%=file%>
                        </h1>
                        <div class="flex justify-between">
                            <a href="/files/<%=file%>"" class=" text-red-600 underline">Read More</a>
                            <a href="/edit/" class="text-green-800 underline">Edit Filename</a>
                        </div>
                    </div>
                    <%})%>
                        <%}else{%>
                            <h1>Not Tasks Yet.</h1>
                            <%}%>

        </div>
    </div>
</body>

</html>